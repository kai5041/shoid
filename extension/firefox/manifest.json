{
  "manifest_version": 2,
  "name": "My Extension",
  "version": "1.0",
  "description": "Minimal Firefox Extension",
  "permissions": ["tabs", "storage"],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
